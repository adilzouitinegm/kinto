    };
    // Alt BKSP to DELETE
    replace key <BKSP> {
        type[Group1]= "ONE_LEVEL_CTRL",
        symbols[Group1]= [
            BackSpace,
            BackSpace,
            BackSpace
        ],
        actions[Group1]= [
            NoAction(),
            NoAction(),
            RedirectKey(key=<DELE>,clearmods=Mod1)
        ]
    };
};
partial xkb_symbols "mac_browsers" {
    // Cycle App and In App Tab Switching
    key <FK13> { [ F13 ] };
    key <FK14> { [ F14 ] };
    replace key <TAB> {
        type[Group1]= "ONE_LEVEL_CMD",
        symbols[Group1]= [
            Tab,
