partial xkb_symbols "mac_chrome" {
    // Back Button
    replace key <LEFT> {
        type[Group1]= "ONE_LEVEL_CTRL",
        symbols[Group1]= [
            Left,
            Left,
            NoSymbol,
            NoSymbol,
            Left
        ],
        actions[Group1]= [
            // Base
            NoAction(),
            // Shift
            NoAction(),
            // Alt
            RedirectKey(key=<FK18>),
            // Alt
            RedirectKey(key=<FK18>),
            // Control
            RedirectKey(key=<LEFT>,modifiers=Mod1,clearmods=Control)
        ]
    };
    // Forwards Button
    replace key <RGHT> {
        type[Group1]= "ONE_LEVEL_CTRL",
        symbols[Group1]= [
            // Base
            Right,
            // Shift
            Right,
            // Alt
            NoSymbol,
            // Shift Alt
            NoSymbol,
            // Control
            Right
        ],
        actions[Group1]= [
            // Base
            NoAction(),
            // Shift
            NoAction(),
            // Alt
            RedirectKey(key=<FK18>),
            // Shift Alt
            RedirectKey(key=<FK18>),
            // Control
            RedirectKey(key=<RGHT>,modifiers=Mod1,clearmods=Control)
        ]
    };
};