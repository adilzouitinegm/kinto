default partial xkb_types "addmac_levels" {
    type "ONE_LEVEL_CTRL" {
        modifiers= Shift+Control;
        map[Shift]= Level2;
        map[Control]= Level3;
        map[Shift+Control]= Level3;
        level_name[Level1]= "Base";
        level_name[Level2]= "Caps";
        level_name[Level3]= "With Control";
    };
    type "TWO_LEVEL_CTRL" {
        modifiers= Shift+Control;
        map[Shift]= Level2;
        map[Control]= Level3;
        map[Shift+Control]= Level3;
        level_name[Level1]= "Base";
        level_name[Level2]= "Caps";
        level_name[Level3]= "With Control";
    };
};
